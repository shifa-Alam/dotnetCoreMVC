
@model IEnumerable<InAndOut.Models.Item> 

<div class="container p-3">
    <div class="row p-4">
        <div class="col-md-6">
            <h2 class="text-primary">Borrowed Items</h2>
        </div>
        <div class="col-md-6 text-right">
            
            <a  asp-area="" asp-controller="Item" asp-action="Create" class="btn btn-primary">Create new Item</a>
        </div>
    </div>
    @if (Model.Count() > 0) { 
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Borrower</th>
                    <th>Lander</th>
                    <th>Changes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="25%">@item.Name</td>
                    <td width="25%">@item.Borrower</td>
                    <td width="25%">@item.Lender</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Item" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary">Update</a>
                            <a asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete
                            </a>
                        </div>
                    </td>
                   
                </tr>
                }
            </tbody>
        </table>
    }
    else { 
        <p>No Item Created Yet</p>
    }
</div>


